<div class="container">
  <div class="text-center mt-5">
    <h2>ログイン</h2>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-10 col-md-6">
      <%= form_with model: @user, url: session_path(@user), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "text-secondary fw-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm py-md-3" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "text-secondary fw-bold mb-2 pt-4" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "current-password", class: "form-control shadow-sm py-md-3" %>
      </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %> 
      <div class="my-5 text-center">
        <%= f.submit "ログイン", class: "btn btn-blue shadow-sm fw-bold py-3 w-50" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

 
<%= render "devise/shared/links" %>
