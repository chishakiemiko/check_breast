            <%= f.label :zip_code, "郵便番号", class: "text-secondary fw-bold mb-2" %>
            <!--<span class="p_required">必須</span>-->
            <%= f.text_field :zip_code, class: "form-control shadow-sm py-md-3" %>
          </div>
          
          <div class="text-center">
            <%= f.submit "編集", class: "btn shadow-sm fw-bold mt-4 px-5 py-3" %>
          </div>
      <% end %>    
  </div>
</div>
