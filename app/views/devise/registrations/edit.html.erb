<div class="container">
  <div class="text-center mt-5">
    <h2>アカウント編集 <%#= resource_name.to_s.humanize %></h2>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-10 col-md-6">
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
